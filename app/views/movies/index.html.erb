<b>Peliculas</b>
<br>
Cantidad de peliculas: <%= @movies.count %>

<br>
<%= notice %>
<table>
	<tr>
	<th>Pelicula</th>
	<th>Reviews</th>

	<th></th>
	</tr>

<% @movies.each do |movie| %>
	<tr>
	<td>
	<%= movie.name %>
	</td>
	<td>
	<% movie.reviews.each do |review| %>
		<%= review.texto  %>
	<% end %>
	</td>
	<td>
		<a href="/movies/<%= movie.id %>">Editar</a>
		<a href="/movies/delete/<%= movie.id %>">Borrar</a>

	</td>
	</tr>

<% end %>

</table>

